<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".e_reference"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_source"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-65dp"
        android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/black"
        android:text="Reference Sources"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_margin="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Reference"
            android:textSize="23dp"
            android:justificationMode="inter_word"
            android:paddingBottom="10dp"
            android:background="@drawable/setting_btm_line"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/reference_vid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="source"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Reference"
            android:textSize="23dp"
            android:justificationMode="inter_word"
            android:paddingBottom="10dp"
            android:background="@drawable/setting_btm_line"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/reference_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="source"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icon Reference"
            android:textSize="23dp"
            android:justificationMode="inter_word"
            android:paddingBottom="10dp"
            android:background="@drawable/setting_btm_line"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/reference_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="source"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="20dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>